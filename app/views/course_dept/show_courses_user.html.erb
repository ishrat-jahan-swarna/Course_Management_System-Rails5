<% if @ch == 1 %>
  <h6> You haven't set your profile yet. </h6>
<% elsif @ch == 2 %>
  <h6> Sorry, your profile hasn't been approved yet. </h6>
<% else %>
<h1>All courses for <%= @dept.name %> </h1>

<table class="table table-hover table align-middle">
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Credit</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @dept.courses.each do |course| %>
        <tr>
        <td><%= course.code %></td>
        <td><%= course.title %></td>
        <td><%= course.credit %></td>
        <td><%= link_to 'See Details', courses_show_courses_user_path(course: course), :class => "link-primary" %></td>
        </tr>       
    <% end %>
  </tbody>
</table>
<% end %>
