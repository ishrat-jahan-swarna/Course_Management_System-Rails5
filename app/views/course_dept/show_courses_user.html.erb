<% if @check == 1 %>
    <h6> You haven't set your profile yet. </h6>
<% else %>
<h6>All courses for <%= @dept.name %> </h1>

<table class="table table-hover table align-middle">
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @dept.courses.each do |course| %>
        <tr>
        <td><%= course.code %></td>
        <td><%= course.title %></td>
        <td><%= link_to 'See Details', course, :class => "link-primary" %></td>
        </tr>       
    <% end %>
  </tbody>
</table>
<% end %>
