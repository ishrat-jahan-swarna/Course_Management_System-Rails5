<section>
    <%= form_tag do %>
        <h3>Please Log In</h3>
        <div class="mb-3">
            <%= label_tag :email, 'Email:', :class => "form-label" %>
            <%= email_field_tag :email, params[:email], :class => "form-control" %>
        </div>
        <div class="mb-3">
            <%= label_tag :name, 'Name:', :class => "form-label" %>
            <%= text_field_tag :name, params[:name], :class => "form-control" %>
        </div>
        <div class="mb-3">
            <%= label_tag :password, 'Password:', :class => "form-label" %>
            <%= password_field_tag :password, params[:password], :class => "form-control" %>
        </div>
        <div class="mb-3">
            <%= submit_tag "Login", :class => "btn btn-primary" %>
        </div>
    <% end %>
</section>
